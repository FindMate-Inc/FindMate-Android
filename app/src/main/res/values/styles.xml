<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme2" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarItemBackground">@color/white</item>
        <item name="android:statusBarColor">@color/primary_dark</item>

        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextMain">
        <item name="android:fontFamily">@font/sansserif_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/font_color</item>
    </style>

    <style name="TextCaption">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_color_caption</item>
    </style>

    <style name="NullStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/black_5</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
    </style>

    <style name="lobster">
        <item name="android:fontFamily">@font/lobster_regular</item>
    </style>

    <style name="InputLayoutBase" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextColor">@color/create_post_edit_view_hint_color</item>
        <item name="android:background">@null</item>
        <item name="boxBackgroundMode">none</item>
        <item name="helperTextEnabled">true</item>
        <item name="boxBackgroundColor">@color/yellow_orange</item>
        <item name="helperTextTextColor">@color/font_color_disabled</item>
        <item name="boxStrokeColor">@color/white</item>
    </style>

    <style name="InputBase">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:background">@drawable/selector_edit_text_line</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewBase">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>